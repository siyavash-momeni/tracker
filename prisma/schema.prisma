generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum HabitFrequency {
  DAILY
  WEEKLY
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  notes     Notes[]
  habits    Habit[]  // Relation vers les habitudes
}

model Habit {
  id          String                @id @default(uuid())
  title       String
  emoji       String                @default("ðŸŽ¯")
  targetValue Int                   @default(1)
  frequency   HabitFrequency        @default(DAILY)
  activeDays  Int[]                 @default([1, 2, 3, 4, 5, 6, 7])
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  
  // Relation avec l'utilisateur
  userId      String
  user        User                  @relation(fields: [userId], references: [clerkId])
  
  // Relation avec les completions
  completions HabitCompletion[]

  @@index([userId]) // Pour accÃ©lÃ©rer la recherche des habitudes d'un user prÃ©cis
}

model HabitCompletion {
  id        String   @id @default(uuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  value     Int      @default(1)
  completedDate DateTime // Date de completion (sans l'heure)
  createdAt DateTime @default(now())

  @@unique([habitId, completedDate]) // Une completion par habit par jour
  @@index([habitId])
}

model Notes {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [clerkId])
}